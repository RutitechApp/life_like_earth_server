<%- include('../Header.ejs');-%>

<div class="main-content container-fluid">
    <div class="page-title mb-3">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Add Exoplanets Quiz</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <div class="d-flex justify-content-end">
                    <a href="/admin/exoplanets-quiz" class="btn btn-secondary"> Back</a>
                </div>
            </div>
        </div>
    </div>	
    <section id="basic-vertical-layouts">
        <div class="row match-height">
            <div class="col-md-12 col-sm-12 mx-auto">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <form class="form form-vertical" action="/admin/add-exoplanets-quiz-action" method="POST">
                              <%if (message.length > 0) {%>
                                   <div class="alert alert-dismissible"  style="background:#5bc093;border-style: solid;  border-color:#55a682; border-width:1px; color: #fff;">
                                       <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                       <strong>Message!</strong> <%= message %>
                                   </div>
                               <% } %>
                               <%if(error.length > 0) {%>
                                   <div class="alert alert-dismissible" style="background:#fd7c7c;border-style: solid;  border-color:#e64b4b; border-width:1px; color: #fff;">
                                       <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                       <strong>Error!</strong> <%= error %>
                                   </div>
                               <% } %>
                                <div class="form-body">
                                    <div class="row flex-column align-content-around">
                                        <div class="col-lg-12 mb-1">
                                            <fieldset class="form-group">
                                                <label for="basicSelect">Select Exoplanet</label>
                                                <select name="exoplanet_id" id="exoplanet_id"
                                                    class="form-select" required>
                                                    <option value="" disabled selected>Select Exoplanet</option>
                                                    <% exoplanetData.forEach(function(row){ %>   
                                                        <option value="<%=row._id%>"><%=row.planetName%></option>   
                                                        <%})%>

                                                </select>
                                            </fieldset>
                                        </div>
                                        <div class="col-12 mx-auto">
                                            <div class="form-group">
                                                <label for="first-name-vertical">Question</label>
                                                <input type="text" id="first-name-vertical"
                                                    class="form-control" name="question"
                                                    placeholder="Enter question" required>
                                            </div>
                                        </div>
                                        <div class="col-12 mx-auto">
                                            <div class="form-group">
                                                <label for="first-name-vertical">Answer</label>
                                                <input type="text" id="first-name-vertical"
                                                    class="form-control" name="answer"
                                                    placeholder="Enter answer" required>
                                            </div>
                                        </div>
                                        <div class="col-12 mx-auto">
                                            <div class="form-group">
                                                <label for="first-name-vertical">Option A</label>
                                                <input type="text" id="first-name-vertical"
                                                    class="form-control" name="option_a"
                                                    placeholder="Enter Option A" required>
                                            </div>
                                        </div>
                                        <div class="col-12 mx-auto">
                                            <div class="form-group">
                                                <label for="first-name-vertical">Option B</label>
                                                <input type="text" id="first-name-vertical"
                                                    class="form-control" name="option_b"
                                                    placeholder="Enter Option B" required>
                                            </div>
                                        </div>
                                        <div class="col-12 mx-auto">
                                            <div class="form-group">
                                                <label for="first-name-vertical">Option C</label>
                                                <input type="text" id="first-name-vertical"
                                                    class="form-control" name="option_c"
                                                    placeholder="Enter Option C" required>
                                            </div>
                                        </div>
                                        <div class="col-12 mx-auto">
                                            <div class="form-group">
                                                <label for="first-name-vertical">Option D</label>
                                                <input type="text" id="first-name-vertical"
                                                    class="form-control" name="option_d"
                                                    placeholder="Enter Option D" required>
                                            </div>
                                        </div>
                                        <div class="col-12 mx-auto d-flex justify-content-center">
                                            <button type="submit"
                                                class="btn btn-primary me-1 mb-1">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include('../Footer')-%>