<%- include('../Header.ejs');-%>

<div class="main-content container-fluid">
  <div class="page-title mb-3">
    <div class="row">
      <div class="col-12 col-md-6 order-md-1 order-last">
        <h3>Add Exoplanets</h3>
      </div>
      <div class="col-12 col-md-6 order-md-2 order-first">
        <div class="d-flex justify-content-end">
          <a href="/admin/exoplanets" class="btn btn-secondary">Back</a>
        </div>
      </div>
    </div>
  </div>
  <section id="basic-vertical-layouts">
    <div class="row match-height">
      <div class="col-md-12 col-sm-12 mx-auto">
        <div class="card">
          <div class="card-content">
            <div class="card-body">
              <form
                class="form form-vertical"
                action="/admin/add-exoplanet"
                method="POST"
              >
                <%if (message.length > 0) {%>
                <div
                  class="alert alert-dismissible"
                  id="alert"
                  style="
                    background: #5bc093;
                    border-style: solid;
                    border-color: #55a682;
                    border-width: 1px;
                    color: #fff;
                  "
                >
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                  ></button>
                  <strong>Message!</strong> <%= message %>
                </div>
                <% } %> <%if(error.length > 0) {%>
                <div
                  class="alert alert-dismissible"
                  id="alert"
                  style="
                    background: #fd7c7c;
                    border-style: solid;
                    border-color: #e64b4b;
                    border-width: 1px;
                    color: #fff;
                  "
                >
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                  ></button>
                  <strong>Error!</strong> <%= error %>
                </div>
                <% } %>
                <div class="row">
                  <div class="col-12 col-md-6">
                    <div class="card">
                      <div class="card-body">
                        <div class="form form-vertical">
                          <div class="form-body">
                            <div class="row flex-column align-content-around">
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Planet Name</label
                                  >
                                  <input
                                    type="text"
                                    id="planetName"
                                    class="form-control"
                                    name="planetName"
                                    placeholder="Enter Planet Name"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Host Name</label
                                  >
                                  <input
                                    type="text"
                                    id="hostName"
                                    class="form-control"
                                    name="hostName"
                                    placeholder="Enter Host Name"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Planet Type</label
                                  >
                                  <input
                                    type="text"
                                    id="hostName"
                                    class="form-control"
                                    name="planetType"
                                    placeholder="Enter Planet Type"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Description</label
                                  >
                                  <input
                                    type="text"
                                    id="hostName"
                                    class="form-control"
                                    name="description"
                                    placeholder="Enter description"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Number Of Stars</label
                                  >
                                  <input
                                    type="number"
                                    id="numberOfStars"
                                    class="form-control"
                                    name="numberOfStars"
                                    placeholder="Enter Number Of Stars"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Discovery Method</label
                                  >
                                  <input
                                    type="text"
                                    id="discoveryMethod"
                                    class="form-control"
                                    name="discoveryMethod"
                                    placeholder="Enter Discovery Method"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Discovery Year</label
                                  >
                                  <input
                                    type="number"
                                    id="discoveryYear"
                                    class="form-control"
                                    name="discoveryYear"
                                    placeholder="Enter Discovery Year"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Discovery Facility</label
                                  >
                                  <input
                                    type="text"
                                    id="discoveryFacility"
                                    class="form-control"
                                    name="discoveryFacility"
                                    placeholder="Enter Discovery Facility"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Solution Type</label
                                  >
                                  <input
                                    type="text"
                                    id="solutionType"
                                    class="form-control"
                                    name="solutionType"
                                    placeholder="Enter Solution Type"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Planetary Parameter Reference</label
                                  >
                                  <input
                                    type="text"
                                    id="planetaryParameterReference"
                                    class="form-control"
                                    name="planetaryParameterReference"
                                    placeholder="Enter Planetary Parameter Reference"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Orbital Period Days</label
                                  >
                                  <input
                                    type="text"
                                    id="orbitalPeriodDays"
                                    class="form-control"
                                    name="orbitalPeriodDays"
                                    placeholder="Enter Orbital Period Days"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Planet Mass Or Mass Sin I Earth Mass</label
                                  >
                                  <input
                                    type="text"
                                    id="planetMassOrMassSinIEarthMass"
                                    class="form-control"
                                    name="planetMassOrMassSinIEarthMass"
                                    placeholder="Enter Planet Mass Or Mass Sin I Earth Mass"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="first-name-vertical"
                                    >Stellar Parameter Reference</label
                                  >
                                  <input
                                    type="text"
                                    id="stellarParameterReference"
                                    class="form-control"
                                    name="stellarParameterReference"
                                    placeholder="Enter Stellar Parameter Reference"
                                    required
                                  />
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-12 col-md-6">
                    <div class="card">
                      <div class="card-body">
                        <div class="form form-vertical">
                          <div class="form-body">
                            <div class="row flex-column align-content-around">
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="stellarEffectiveTemperatureK"
                                    >Stellar Effective Temperature K</label
                                  >
                                  <input
                                    type="text"
                                    id="stellarEffectiveTemperatureK"
                                    class="form-control"
                                    name="stellarEffectiveTemperatureK"
                                    placeholder="Enter Stellar Effective Temperature K"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="stellarSurfaceGravityLog10Cms2"
                                    >Stellar Surface Gravity Log 10 Cms 2</label
                                  >
                                  <input
                                    type="text"
                                    id="stellarSurfaceGravityLog10Cms2"
                                    class="form-control"
                                    name="stellarSurfaceGravityLog10Cms2"
                                    placeholder="Enter Stellar Surface Gravity Log 10 Cms 2"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="systemParameterReference"
                                    >System Parameter Reference</label
                                  >
                                  <input
                                    type="text"
                                    id="systemParameterReference"
                                    class="form-control"
                                    name="systemParameterReference"
                                    placeholder="Enter System Parameter Reference"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="raSexagesimal"
                                    >Ra Sexagesimal</label
                                  >
                                  <input
                                    type="text"
                                    id="raSexagesimal"
                                    class="form-control"
                                    name="raSexagesimal"
                                    placeholder="Enter Ra Sexagesimal"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="raDeg">ra Deg</label>
                                  <input
                                    type="text"
                                    id="raDeg"
                                    class="form-control"
                                    name="raDeg"
                                    placeholder="Enter Ra Deg"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="decSexagesimal"
                                    >Dec Sexagesimal</label
                                  >
                                  <input
                                    type="text"
                                    id="decSexagesimal"
                                    class="form-control"
                                    name="decSexagesimal"
                                    placeholder="Enter Dec Sexagesimal"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="decDeg">Dec Deg</label>
                                  <input
                                    type="text"
                                    id="decDeg"
                                    class="form-control"
                                    name="decDeg"
                                    placeholder="Enter Dec Deg"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="distancePc">Distance Pc</label>
                                  <input
                                    type="text"
                                    id="distancePc"
                                    class="form-control"
                                    name="distancePc"
                                    placeholder="Enter Distance Pc"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="vJohnsonMagnitude"
                                    >V Johnson Magnitude</label
                                  >
                                  <input
                                    type="text"
                                    id="vJohnsonMagnitude"
                                    class="form-control"
                                    name="vJohnsonMagnitude"
                                    placeholder="Enter V Johnson Magnitude"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="ks2MASSMagnitude"
                                    >Ks 2MASS Magnitude</label
                                  >
                                  <input
                                    type="text"
                                    id="ks2MASSMagnitude"
                                    class="form-control"
                                    name="ks2MASSMagnitude"
                                    placeholder="Enter Ks 2MASS Magnitude"
                                    required
                                  />
                                </div>
                              </div>
                              <div class="col-12 mx-auto">
                                <div class="form-group">
                                  <label for="gaiaMagnitude"
                                    >Gaia Magnitude</label
                                  >
                                  <input
                                    type="text"
                                    id="gaiaMagnitude"
                                    class="form-control"
                                    name="gaiaMagnitude"
                                    placeholder="Enter Gaia Magnitude"
                                    required
                                  />
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary me-1 mb-1">
                  Save
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<script>
    const message = `<%= message %>`
    if (message.length) {
        setTimeout(() => {
            var alertNode = document.querySelector('#alert')
            alertNode.remove()
        }, 3000);
    }
    const error = `<%= error %>`
    if (error.length) {
        setTimeout(() => {
            var alertNode = document.querySelector('#alert')
            alertNode.remove()
        }, 3000);
    }
</script>

<%- include('../Footer')-%>
